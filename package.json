{
  "name": "remichalak",
  "private": true,
  "devDependencies": {
    "@mdx-js/loader": "^1.6.6",
    "@mdx-js/mdx": "^1.6.6",
    "chokidar-cli": "^2.1.0",
    "classnames": "^2.2.6",
    "directory-metagen": "^1.6.3",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "enzyme-to-json": "^3.5.0",
    "html-to-react": "^1.4.3",
    "husky": "^4.2.5",
    "jest-enzyme": "^7.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-app-polyfill": "^1.0.6",
    "react-app-rewired": "^2.1.6",
    "react-dom": "^16.13.1",
    "react-helmet-async": "^1.0.6",
    "react-images": "^1.1.7",
    "react-load-image": "^0.1.7",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-scroll-up": "^1.3.3",
    "safe-eval": "^0.4.1",
    "source-map-explorer": "^2.4.2",
    "yaml-front-matter": "^4.1.0",
    "yaml-loader": "^0.6.0"
  },
  "scripts": {
    "build-pages": "node scripts/convert-md-to-mdx.js && node scripts/pages.js",
    "watch-pages": "chokidar 'src/pages/**/*.mdx' -c 'run-s build-pages' --initial --verbose",
    "start-js": "react-app-rewired start",
    "start": "run-p watch-pages start-js",
    "build": "run-p build-pages && react-app-rewired build",
    "test": "run-p build-pages && react-app-rewired test",
    "analyze": "run-p build && source-map-explorer build/static/js/main.*",
    "format": "prettier --write '{public,scripts,src}/**/*'"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
